@model IEnumerable<Caso_2.Models.Evento>

@{
    ViewData["Title"] = "Eventos";
}

<h2>Eventos</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Crear Nuevo Evento</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Título</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Cupo Máximo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Fecha.ToString("yyyy-MM-dd")</td>
                <td>@item.Hora</td>
                <td>@item.CupoMaximo</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
