@model IEnumerable<Caso_2.Models.Inscripcion>

<h1 class="text-white">Inscritos al Evento: @ViewBag.EventoTitulo</h1>

<p class="text-light">Cupos Restantes: <strong>@ViewBag.CupoRestante</strong></p>

<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>Nombre Completo</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Fecha de Inscripción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inscripcion in Model)
        {
            <tr>
                <td>@inscripcion.Usuario.NombreCompleto</td>
                <td>@inscripcion.Usuario.Email</td>
                <td>@inscripcion.Usuario.Telefono</td>
                <td>@inscripcion.FechaInscripcion.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="EventosConInscritos" asp-controller="Eventos" class="btn btn-secondary">Volver a Eventos</a>