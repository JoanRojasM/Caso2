@model Categoria

@{
    ViewData["Title"] = "Detalles de Categoría";
}

<h1 class="mb-4">Detalles de Categoría</h1>

<div class="card text-white">
    <div class="card-header" style="background-color:#09090b">
        <h3>@Model.Nombre</h3>
    </div>
    <div class="card-body" style="background-color:#171c22">
        <p><strong>Descripción:</strong> @Model.Descripcion</p>
        <p>
            <strong>Estado:</strong>
            @if (Model.Estado)
            {
                <span class="badge bg-success">Activo</span>
            }
            else
            {
                <span class="badge bg-danger">Inactivo</span>
            }
        </p>
        <p><strong>Fecha de Registro:</strong> @Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</p>
        <p><strong>Usuario de Registro:</strong> @Model.UsuarioRegistro</p>
    </div>
    <div class="card-footer" style="background-color:#121922">
        <a class="btn btn-primary" href="/Categoria/Edit/@Model.Id">Editar</a>
        <a class="btn btn-secondary" href="/Categoria">Volver al Listado</a>
    </div>
</div>
