@model Categoria

@{
    ViewData["Title"] = "Crear Categoría";
}

<h1 class="mb-4">Crear Categoría</h1>

<form asp-action="Create" method="post" class="border p-4 rounded">
    <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control bg-dark text-white" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Descripcion" class="form-label">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control bg-dark text-white"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a class="btn btn-secondary" href="/Categorias">Cancelar</a>
</form>
