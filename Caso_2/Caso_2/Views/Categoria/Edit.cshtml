@model Categoria

@{
    ViewData["Title"] = "Editar Categoría";
}

<h1 class="mb-4">Editar Categoría</h1>

<form asp-action="Edit" method="post" class="border p-4 rounded">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Descripcion" class="form-label">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label for="Estado" class="form-label">Estado</label>
        <select asp-for="Estado" class="form-select">
            <option value="true" selected="@Model.Estado">Activo</option>
            <option value="false" selected="!@Model.Estado">Inactivo</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Guardar cambios</button>
    <a class="btn btn-secondary" href="/Categorias">Cancelar</a>
</form>
